  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation       
            span.icon-bar        
            span.icon-bar        
            span.icon-bar       
          a.navbar-brand(href='/') SpaceApps Mikkeli      
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/program') Program   
            li
              a(href='/challenges') Challenges             
            li
              a(href='/venue') Venue
            li
              a(href='/spaceguide') Space guide 
            if user
              li
                a(href='/users') Usermanagement
              li
                a(href='/logout') Logout
    if (menu === 'index')
      .jumbotron
        .container
          .space-logo.text-center.exo
            img.logo-size(src='img/sa_logo_circle_cs.png')
            br
            | April 11-12
    else
      .jumbotron-narrow
        .container
          .col-md-12
            if (menu === 'program')
              h1 Program
            if (menu === 'challenges')
              h1 Challenges
            if (menu === 'venue')
              h1 Venue
            if (menu === 'spaceguide')
              h1 Space guide
            if (menu === 'management')
              h1 Management
    .container
      block content
    .container-fluid.footer-container
      .container
        .row                   
          .col-md-4.padding-bottom30
            h3 Venue
            hr                        
            h4 Organizer
            p Mikko Lampi
            p +365 1234 567
            h4 Address
            p Patteristonkatu 2
            p 50100 Mikkeli
          .col-md-4.padding-bottom30
            h3 Follow us!
            hr                       
            p
              a(href='https://www.facebook.com/SpaceAppsMikkeli')
                img.padding-right10(src='img/facebook-48.png')                      
              a(href='https://twitter.com/SpaceAppsMLI')
                img.padding-right10(src='img/twitter-48.png') 
          .col-md-4.padding-bottom30
            h3 Partners  
            hr         
            br          
            .row
              .col-md-12.padding-bottom30
                a(href='http://www.mamk.fi/')
                  img(src='img/mamk_logo.jpg')            
              .col-md-12.padding-bottom30
                a(href='http://mikkelies.fi/en/')
                  img(src='img/mikkelies_logo_280.jpg')           
              .col-md-12.padding-bottom30
                a(href='http://mikkeli.hacklab.fi/')
                  img(src='img/hl_logo.jpg') 
          
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/responsive.js')
    if user
      script(src='//cdn.ckeditor.com/4.4.7/standard/ckeditor.js')
      script(src='/js/spaceapp_admin.js')
    else
      script(src='/js/spaceapp.js')
